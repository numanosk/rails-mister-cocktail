
<div class="wrapper"
      style="<%= "background-image:
         url('<%= cl_image_path(@cocktail.picture.path, :width => 700, :height => 900, :x => 596, :y => 164, :crop => :crop) %>'); background-repeat: no-repeat;" if @cocktail.picture? %>">
  <div class="container", style="margin-top: 25px">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
        <h2><%= @cocktail.name %></h2>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
        <h2><%= button_to 'Edit', edit_cocktail_path(@cocktail),  :class => "btn btn-success" %></h2>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
        <h3>Ingredient</h3>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
        <h3>Dose</h3>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
        <h3>Delete</h3>
      </div>
    </div>

      <% @cocktail.doses.each do |dose| %>
        <% if dose.persisted? %>
          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
              <%= dose.ingredient.name %>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
              <%= dose.description %>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3 col-md-offset-1">
              <%= button_to "delete!", cocktail_dose_path(@cocktail, dose), :class => "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>


  <h2 style="margin-left: 60px; margin-top: 25px">Add an ingredient</h2>
  <div class="container text-center", style="margin-top: 25px">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <%= render "doses/form" %>
      </div>
    </div>
  </div>
</div>


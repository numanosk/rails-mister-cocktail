<h1>Cocktails list</h1>

<div class="container text-center">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card"  style="height: 50px, width: 40rem">
          <h4><strong><%= link_to cocktail.name, cocktail_path(cocktail) %></strong></h4>
          <%= image_tag "mojito.jpg", size: "80x100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div style="margin-top: 15px">
  <p><%= link_to 'Add a cocktail', new_cocktail_path %></p>
</div>

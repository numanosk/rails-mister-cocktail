<h3 id="font-green">Cocktails list</h3><br>

<div class="container text-center">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card"  style="height: 50px, width: 40rem">
          <h4>
            <%= link_to cocktail.name, cocktail_path(cocktail), {:style =>'text-decoration: none;', :id => "font-red"}%>
          </h4>
          <% if cocktail.picture? %>
            <%= cl_image_tag cocktail.picture.path, width: 200, height: 300, crop: :fill %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
